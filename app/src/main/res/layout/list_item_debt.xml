<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView
        android:id="@+id/list_item_debt_amount_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        tools:text="Debt amount"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/list_item_debt_debtor_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/list_item_debt_amount_text_view"
        android:textStyle="bold"
        android:padding="4dp"
        tools:text="Debtor name"/>

    <TextView
        android:id="@+id/list_item_debt_last_date_amount_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/list_item_debt_amount_text_view"
        android:layout_below="@id/list_item_debt_debtor_text_view"
        android:padding="4dp"
        tools:text="Last Date and Amount"/>

</RelativeLayout>